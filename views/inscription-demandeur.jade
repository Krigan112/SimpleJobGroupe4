extends layout 
block content 

  //- BEGIN FORMULAIRE 
  form(action='/espaceDemandeur', method="post", id="form-1")

    //- CONTENT PAGE - VISIBLE 
    .col-md-12.content-inscription#content-inscription-demandeur

      //- CONTENT FORMULAIRE 
      .col-md-12.content-formulaire 

        //- ETAPE 1 - INFORMATIONS PERSONNELLES 
        //- TITLE FORMULAIRE
        .col-md-offset-2.col-md-8.title-formulaire
          h3 Informations Personnelles
          p Veuillez à bien remplir tous les champs

        //- CONTENT FULL
        .col-md-12.content-full

          //- ITEMS GUIDAGE USER
          .col-md-1#item-guidage-demandeur.items-guidage-user
            p#item-active 1
            p 2 
            P 3

          //- BEGIN CONTENT FORMULAIRE 
          .col-md-11.espace-formulaire#form-demandeur

            //- CONTENT FORMULAIRE LEFT
            .col-md-6.content-form
              //- CHAMPS DU FORMULAIRE 
              ul            
                li
                  label(for='name') Nom :
                  input(name='name', type='text' placeholder='Nom')          
                li
                  label(for='prenom') Prénom :
                  input(name='prenom', type='text' placeholder='Prénom')          
                li
                  label(for='Adresse') Adresse :
                  input(name='Adresse', type='text' placeholder='Adresse')
                li
                  label(for='ville') Ville :
                  input(name='ville', type='text' placeholder='Ville')
                li
                  label(for='code_postal') Code Postal :
                  input(name='code_postal', type='text' placeholder='Code Postal')

            //- CONTENT FORMULAIRE RIGHT 
            .col-md-6.content-form
              //- CHAMPS FORMULAIRE
              ul
                li
                  label(for='telephone') Téléphone :
                  input(name='telephone', type='tel' placeholder='Téléphone')
                li
                  label(for='email') E-mail :
                  input(name='email', type='email' placeholder='E-mail')
                li
                  label(for='mot_de_passe2') Permis de conduire :
                  select(name='permis_de_conduire')
                    option(value='Oui') Oui
                    option(value='Non') Non
                li
                  label(for='mot_de_passe') Mot de passe :
                  input(name='mot_de_passe', type='password' placeholder='Mot de passe')
                li
                  label(for='mot_de_passe2') Confirmation mot de passe :
                  input(name='mot_de_passe2', type='password' placeholder='Mot de passe')

          //- BUTTON END FORM 
          .col-md-offset-3.col-md-6.button-end-form

            //- BUTTON RETOUR
            .col-md-6.zone-button
              a.all-button(href="index.html") Retour

            //- BUTTON SUIVANT 
            .col-md-6.zone-button
              a#click-suivant-demandeur.all-button Suivant

        //- ETAPE 2 - TEST DE COMPETENCES 
        //- TITLE FORMULAIRE
