              .col-md-6.content-form
                //- CHAMPS FORMULAIRE
                ul
                  li
                    label(for='adresse') Adresse :
                    input(name='adresse', type='text' placeholder='Adresse')
                  li
                    label(for='ville') Ville :
                    input(name='ville', type='text' placeholder='Ville')
                  li
